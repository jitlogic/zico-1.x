<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="res" type="com.jitlogic.zico.client.widgets.WidgetResources"/>

    <ui:style>
        /* TODO rethink styles below, use CssResource capabilities to split it into (proper) mixins */
        /* https://github.com/jDramaix/gss.gwt */
        .window {
            background: white;
            border: 1px solid #aaa;
            border-top-left-radius: 4px;
            border-top-right-radius: 4px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.176);
        }
        .caption {
            padding: 4px;
            cursor: default;
            border-top-left-radius: 4px;
            border-top-right-radius: 4px;
            background: #dde;
            display: flex;
            align-items: center;

            -webkit-touch-callout: none;
            -webkit-user-select: none;
            -khtml-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }
        .caption-label {
            flex: 1;
        }
        .caption-image {
            flex: 0 0 20;
            cursor: pointer;
            opacity: 0.4;
        }
        .caption-image:hover {
            opacity: 1;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" styleName="{style.window}">
        <g:north size="24">
            <g:HTMLPanel>
                <div class="{style.caption}">
                    <div class="{style.caption-label}">
                        <g:Label ui:field="lblCaption"/>
                    </div>
                    <div class="{style.caption-image}">
                        <g:Image ui:field="imgClose" resource="{res.windowClose}"/>
                    </div>
                </div>
            </g:HTMLPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>
